{% extends 'base.html.twig' %}

{% set bodyClass = 'places place-index' %}

{% block title %}
    {% if page_title is defined %}{{ page_title }}{% else %}Grand Strand Online{% endif %}
    
{% endblock %}

{% block body %}
    {{ include('parts/header_search.html.twig') }}

    {{ include('parts/breadcrumb.html.twig') }}

    {% if directory is defined %}
        <div id="places-directory" class="container my-4">
            <div class="row">
                {% for category in directory %}
                    <div class="col-12 col-lg-6 my-3">
                        <div class="card rounded-0 border-light">
                            {% if category.label is defined and category.url is defined %}
                                <div class="card-header">
                                    <h3 class="font-weight-bold m-0 {% if category.hClass is defined %}{{ category.hClass }}{% endif %}">
                                        {% if category.icon is defined %}<i class="{{ category.icon }} fa-1x pr-2"></i>{% endif %}
                                        <a href="{{ category.url }}" {% if category.alt is defined %}alt="{{ category.alt }}"{% endif %} class="text-dark {% if category.aClass is defined %}{{ category.aClass }}{% endif %}">{{ category.label }}</a>
                                    </h3>
                                </div>
                            {% endif %}
                            {% if category.lower is defined %}
                                <div class="card-body p-3">
                                    <p class="text-break m-0">{{ category.lower|raw }}</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    
{% endblock %}
