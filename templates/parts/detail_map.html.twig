{% if place.map_lat is defined and place.map_lng is defined and place.map_key is defined  %}
    <div id="full-width-map" class="map-container rounded-0 border border-light" style="height: 500px">
        <iframe width="100%" height="500" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" frameborder="0" style="border:0" 
            src="https://maps.google.com/maps?{% if place.map_key != false %}key={{ place.map_key }}&{% endif %}width=100%25&height=500&hl=en&ll={{ place.map_lat }},{{ place.map_lng }}&q={{ place.name }}&t=&z=14&ie=UTF8&iwloc=B&output=embed"></iframe>
    </div>
{% endif %}